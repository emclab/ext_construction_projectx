<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<%= simple_form_for @project do |f| %>
  <%= f.input :customer_name_autocomplete,:input_html => { data: {autocomplete_source: SUBURI + kustomerx.autocomplete_customers_path}},
              :label => t('Customer'), :placeholder => t('Enter Customer Keyword'), :required => true unless @customer%>
  <%= f.input :customer_name, :label => t('Customer'), :readonly => true, :input_html => {:value => @customer.short_name} if @customer%>
  <%= f.input :customer_contact, :label => t('Customer Contact'), :input_html => { :rows => 3} %>
  <%= f.input :customer_id, :as => :hidden, :readonly => true, :input_html => {:value => @customer.id} if @customer%>
  <%= f.input :name, :label => t('Project Name') %> 
  <%= f.input :project_desp, :label => t('Project Description'), :input_html => { :rows => 3} %> 
  <%= f.input :construction_spec, :label => t('Construction Spec'), :input_html => { :rows => 3} %>
  <%= f.input :other_spec, :label => t('Other Spec'), :input_html => { :rows => 3} %>
  <%= f.input :construction_address, :label => t('Construction Address'), :input_html => { :rows => 3} %>
  <%= f.input :turn_over_requirement, :label => t('Turnover Requirement'), :input_html => { :rows => 3} %>
  <%= f.input :construction_start_date, :label => t('Construction Start Date'), :as => :string %>
  <%= f.input :construction_finish_date, :label => t('Construction Finish Date'), :as => :string %>
  <%= f.input :turn_over_date, :label => t('Turnover Date'), :as => :string %>
  <%= f.input :awarded, :label => t('Awarded'), :as => :boolean %>
  
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>
<% end %>

<% end %>


