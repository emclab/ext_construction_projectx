<% if  @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<div class="container-fluid">
<div class="pagination"><%= will_paginate models %></div>
   <div class="page-header clearfix">
      <div class="pull-left">
        <h2><%=@title%></h2>
      </div>
    </div>
<table class="table table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th><%= t('Customer') %></th>
    <th><%= t('Project Name') %></th>
    <th><%= t('Construction Address') %></th>
    <th><%= t('Construction Spec') %></th>
    <th><%= t('Project Description') %></th>
    <th><%= t('Awarded') %></th>
    <th><%= t('Completed') %></th>
    <th><%= t('Cancelled') %></th>
    <th><%= t('Construction Start Date') %></th>
    <th><%= t('Construction Finish Date') %></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% models.each do |r| %>
  <tr>
    <% if has_action_right?('show', params[:controller], r) %>
        <td><%= link_to r.id, SUBURI + "/authentify/view_handler?index=1&url=#{project_path(r)}"  %></td>
    <% else %>
        <td><%= r.id %></td>
    <% end %>
  	<% if has_action_right?('show',ExtConstructionProjectx.customer_class.to_s.underscore.pluralize, r.customer ) %>
  	  <td><%= link_to r.customer.short_name, SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI::escape(kustomerx.customer_path(:id => r.customer_id))}"  %></td>
  	<% else %>
  	  <td><%= prt(r, 'customer.short_name') %></td>
  	<% end %>  	    
    <td><%= prt(r, :name) %></td> 
    <td><%= prt(r, :construction_address) %></td> 
    <td><%= prt(r, :construction_spec) %></td>
    <td><%= prt(r, 'project_desp') %></td>
    <td><%= r.awarded ? t('Yes') : t('No') %></td>
    <td><%= r.completed ? t('Yes') : t('No') %></td>
    <td><%= r.cancelled ? t('Yes') : t('No') %></td>
    <td><%= prt(r, :construction_start_date).strftime('%Y/%m/%d') if r.construction_start_date.present? %></td>
    <td><%= prt(r, :construction_finish_date).strftime('%Y/%m/%d') if r.construction_finish_date.present? %></td>
    <td><%= link_to t('BOM'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI.escape(bill_of_base_materialx.boms_path(:project_id => r.id))}", :class => BUTTONS_CLS['action']  if has_action_right?('index', 'bill_of_base_materialx/boms') %></td>
    <td><%= link_to t('Contracts'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI::escape(simple_contractx.contracts_path(:project_id => r.id))}", :class => BUTTONS_CLS['action']  if has_action_right?('index', 'simple_contractx/contracts') %></td>
    <% if has_action_right?('index_man_power', 'resource_allocx/allocations')%>
      <td><%= link_to t('Team Members'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI::escape(resource_allocx.allocations_path(resource_id: r.id, resource_string: 'ext_construction_projectx/projects', detailed_resource_category: 'man_power', subaction: 'man_power'))}", :class => BUTTONS_CLS['action']   %></td>
    <% end %>
    <% if has_action_right?('index', 'petty_warehousex/items') %>
      <td><%= link_to t('Warehouse'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI.escape(petty_warehousex.items_path(whs_sring: 'proj_warehouse', project_id: r.id))}", :class => BUTTONS_CLS['action']  %></td>
    <% end %>
    <% if has_action_right?('index', 'item_checkoutx/checkouts') %>
      <td><%= link_to t('Checkout'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI.escape(item_checkoutx.checkouts_path(project_id: r.id))}", :class => BUTTONS_CLS['action']  %></td>
    <% end %>
    <% if has_action_right?('index', 'payment_requestx/payment_requests') %>
      <td><%= link_to t('Payment Requests'), SUBURI + "/authentify/view_handler?index=1&url=#{SUBURI + CGI.escape(payment_requestx.payment_requests_path(resource_id: r.id, resource_string: 'ext_construction_projectx/projects'))}", :class => BUTTONS_CLS['action']   %></td>
    <% end %>
    <% if has_action_right?('update', params[:controller], r ) %>
      <td><%= link_to t('Edit'), SUBURI + "/authentify/view_handler?index=1&url=#{edit_project_path(r)}" , :class => BUTTONS_CLS['action']   %></td>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>

  
  <div class="btn-toolbar">
    	<%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action']  %>
    	<%= link_to t('New Project'), SUBURI + "/authentify/view_handler?index=1&url=#{new_project_path(:customer_id => @customer.id)}", :class => BUTTONS_CLS['action'] if @customer && has_action_right?('create', params[:controller]) %>
        <%= link_to t('New Project'), SUBURI + "/authentify/view_handler?index=1&url=#{new_project_path}", :class => BUTTONS_CLS['action'] if @customer.nil? && has_action_right?('create', params[:controller]) %>
    	<%= link_to t('Search'), SUBURI + "/authentify/view_handler?index=1&url=#{search_projects_path}", :class => BUTTONS_CLS['action'] if has_action_right?('search', params[:controller]) %>
        <%= link_to t('Stats'), SUBURI + "/authentify/view_handler?index=1&url=#{stats_projects_path}", :class => BUTTONS_CLS['action'] if has_action_right?('stats', params[:controller]) %>
  </div>
 
</div>
<% end %>



